  #   solr.vm.network "public_network", bridge: "enp4s0", ip: "192.168.0.2"
  #   solr.vm.synced_folder "data_solr", "/vagrant_data"
  #   solr.vm.provider "virtualbox" do |vb|
  #     # Dont display the VirtualBox GUI when booting the machine
